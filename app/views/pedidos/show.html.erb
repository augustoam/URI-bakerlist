<div class="wrapper wrapper-content animated fadeInUp">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h5>Pedido  <%= "##{@pedido.id}" %> </h5>
    </div>
    <div class="ibox-content">

      <p>
        <strong>Forma entrega:</strong>
        <%= @pedido.forma_entrega %>
      </p>

      <p>
        <strong>Forma pagamento:</strong>
        <%= @pedido.forma_pagamento.descricao %>
      </p>

      <p>
        <strong>Endereço:</strong>
        <%= @pedido.endereco.endereco %>
      </p>

      <p>
        <strong>Valor Total:</strong>
        <%= @pedido.vl_total %>
      </p>

      <br>
      <p>
        <strong>Itens:</strong>
      </p>
      <div class="row">
        <div class="col-xs-12">
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Id</th>
                  <th>Item</th>
                  <th>Quantidade</th>
                  <th>Unidade</th>
                  <th>Preço</th>
                </tr>
              </thead>
              <tbody>
                <% @itens_pedido.each do |item_pedido| %>
                  <tr>
                    <td><%= item_pedido.id  %></td>
                    <td><%= item_pedido.item.descricao  %></td>
                    <td><%= item_pedido.quantidade %></td>
                    <td><%= item_pedido.item.unidade.descricao %></td>
                    <td>R$ <%= item_pedido.item.preco %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <div class="hr-line-dashed"></div>
      <%= link_to 'Voltar', pedidos_path, class: "btn btn-default pull-left" %>

      <div class="pull-right">     
        <%= link_to 'Excluir', @pedido,  method: :delete, data: {confirm: "Você tem certeza?"}, class: "btn btn-danger" %>
      </div>
      <br>
      <br>
    </div>  
  </div>
</div>
