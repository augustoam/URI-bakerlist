<%= simple_form_for(@pedido) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :data_entrega %>

    <%= f.input :hora_entrega %>

    <%= f.input :forma_entrega %>

    <%= f.input :forma_pagamento_id %>

    <%= f.input :usuario_id %>

