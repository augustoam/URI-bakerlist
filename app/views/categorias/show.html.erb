<div class="wrapper wrapper-content animated fadeInUp">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h5>Categoria  <%= "##{@categoria.id}" %> </h5>
    </div>
    <div class="ibox-content">
			<p>
			  <strong>Descrição:</strong>
			  <%= @categoria.descricao %>
			</p>

			<div class="hr-line-dashed"></div>
			<%= link_to 'Voltar', categorias_path, class: "btn btn-default pull-left" %>
			<div class="pull-right"> 
				<%= link_to 'Excluir', @categoria,  method: :delete, data: {confirm: "Você tem certeza?"}, class: "btn btn-danger" %>
				<%= link_to 'Editar', edit_categoria_path(@categoria), class: "btn btn-primary"%> 
				</div>
			<br>
			<br>
		</div>	
	</div>
</div>




