<p><%= t(".sign_up") %></p>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  
  <div class="form-inputs">
  	<%= f.hidden_field :token, value: params[:token] %>
  	<div class="form-group">
    	<%= f.text_field :email, placeholder: 'Email', class: 'form-control set-focus', required:"" %>
    </div>
    <div class="form-group">
    	<%= f.password_field :password, placeholder: 'Senha', class: 'form-control', required:"" %>
    </div>
    <div class="form-group"> 
    	<%= f.password_field :password_confirmation, placeholder: 'Confirme a senha', class: 'form-control', required:"" %>
  	</div>
  </div>

  <div class="form-group"> 
  	<%= f.submit t(".sign_up"), class: 'btn btn-primary block full-width ' %>
  </div>

  <%= render "usuarios/shared/links" %>
<% end %>



