<div class="wrapper wrapper-content animated fadeInUp">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <div class="row">
        <div class="col-md-1">
          <h3>Itens <% if @itens.count == 0 %> <small>- nenhum registro encontrado</small><% end %></h3>
        </div>
        <%= search_form_for @q do |f| %>
          <div class="col-md-7">
            <%= f.search_field :descricao_cont, class: "form-control" %>
          </div>  
          <div class="col-md-2">
            <%= f.submit class: " form-control" %>
          </div>  
        <% end %>
        <div class="col-md-2">
          <%= link_to 'Novo item', new_item_path, class: "btn-sm btn-primary pull-right" %>
        </div>
      </div>
    </div>
    <div class="ibox-content">
      <div class="row">
        <div class="col-xs-12">
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Id</th>
                  <th>Descrição</th>
                  <th>Categoria</th>
                  <th>Data Criação</th>
                </tr>
              </thead>
              <tbody>
                <% @itens.each do |item| %>
                  <tr data-href="<%= item_path(item)  %>" >
                    <td><%= item.id  %></td>
                    <td><%= item.descricao  %></td>
                    <td><%= item.categoria.descricao  %></td>
                    <td><%= item.created_at.strftime("%d/%m/%Y %H:%M") %></td>
                    <td>
                      <div class="pull-right">
                      <%= link_to 'Excluir', item,  method: :delete, data: {confirm: "Você tem certeza?"}, class: "btn-sm btn-danger" %>
                      <%= link_to 'Editar', edit_item_path(item), class: "btn-sm btn-info" %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>