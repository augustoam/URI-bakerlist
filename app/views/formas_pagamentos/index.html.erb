<div class="wrapper wrapper-content animated fadeInUp">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h5>Formas de Pagamento <% if @formas_pagamentos.count == 0 %> <small>- nenhum registro encontrado</small><% end %></h5>
      <%= link_to 'Nova Forma de Pagamento', new_forma_pagamento_path, class: "btn-sm btn-primary pull-right" %>
    </div>
    <div class="ibox-content">
      <div class="row">
        <div class="col-xs-12">
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Id</th>
                  <th>Descrição</th>
                  <th>Data Criação</th>
                </tr>
              </thead>
              <tbody>
                <% @formas_pagamentos.each do |forma_pagamento| %>
                  <tr data-href="<%= forma_pagamento_path(forma_pagamento)  %>" >
                    <td><%= forma_pagamento.id  %></td>
                    <td><%= forma_pagamento.descricao  %></td>
                    <td><%= forma_pagamento.created_at.strftime("%d/%m/%Y %H:%M") %></td>
                    <td>
                      <div class="pull-right">
                      <%= link_to 'Excluir', forma_pagamento,  method: :delete, data: {confirm: "Você tem certeza?"}, class: "btn-sm btn-danger" %>
                      <%= link_to 'Editar', edit_forma_pagamento_path(forma_pagamento), class: "btn-sm btn-info" %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>