<div class="wrapper wrapper-content animated fadeInUp">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h5>Forma de Pagamento  <%= "##{@forma_pagamento.id}" %> </h5>
    </div>
    <div class="ibox-content">
			<p>
			  <strong>Descrição:</strong>
			  <%= @forma_pagamento.descricao %>
			</p>

			<div class="hr-line-dashed"></div>
			<%= link_to 'Voltar', formas_pagamentos_path, class: "btn btn-default pull-left" %>
			<div class="pull-right">                
				<%= link_to 'Excluir', @forma_pagamento,  method: :delete, data: {confirm: "Você tem certeza?"}, class: "btn btn-danger" %>
				
				<%= link_to 'Editar', edit_forma_pagamento_path(@forma_pagamento), class: "btn btn-primary"%> 
			</div>
			
			<br>
			<br>
		</div>	
	</div>
</div>




