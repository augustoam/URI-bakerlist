<h1>Edição Tarefa Usuario Instancia</h1>

<%= simple_form_for(@tarefa_usuario_instancia) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :tarefa_id %>

    <%= f.input :usuario_instancia_id %>

    <%= f.input :conteudo_resposta %>

    <%= f.input :respondido %>

  </div>

  <div class="form-actions">
    <%= link_to 'Back', tarefa_usuario_instancia_path, class: "btn btn-default"  %>
    <%= f.button :submit, 'Atualizar', class: 'btn btn-success pull-right'  %>
  </div>
<% end %>